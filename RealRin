    TS:Create(fruitBtn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(0, 200, 120)}):Play()
end)
fruitBtn.MouseLeave:Connect(function()
    TS:Create(fruitBtn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(0, 255, 154)}):Play()
end)

-- DRAG SYSTEM
local function InitDrag(target)
    local dragStartPos, dragStart
    
    target.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragStartPos = target.Position
            dragStart = input.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragStart = nil
                end
            end)
        end
    end)
    
    target.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement and dragStart then
            local delta = input.Position - dragStart
            target.Position = UDim2.new(
                dragStartPos.X.Scale,
                dragStartPos.X.Offset + delta.X,
                dragStartPos.Y.Scale,
                dragStartPos.Y.Offset + delta.Y
            )
        end
    end)
end

InitDrag(mainFrame)
InitDrag(rinIcon)

-- MINIMIZE SYSTEM
local function ToggleGUI()
    if mainFrame.Visible then
        TS:Create(mainFrame, TweenInfo.new(0.3), {
            Size = UDim2.new(0, 0, 0, 0),
            Position = rinIcon.Position
        }):Play()
        rinIcon.Visible = true
        mainFrame.Visible = false
    else
        mainFrame.Visible = true
        TS:Create(mainFrame, TweenInfo.new(0.3), {
            Size = UDim2.new(0, 220, 0, 250),
            Position = UDim2.new(0.5, -110, 0.5, -125)
        }):Play()
        rinIcon.Visible = false
    end
end

closeBtn.MouseButton1Click:Connect(ToggleGUI)
rinIcon.MouseButton1Click:Connect(ToggleGUI)

-- LOADING ANIMATION
TS:Create(loadingText, TweenInfo.new(1), {TextTransparency = 0}):Play()
wait(3)
TS:Create(loadingFrame, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
TS:Create(loadingText, TweenInfo.new(0.5), {TextTransparency = 1}):Play()
wait(0.5)
loadingGui:Destroy()
mainGui.Enabled = true

-- DEBUGGING
print("Asset Verification: https://www.roblox.com/library/15454081378")
print("Rin Icon Visible:", rinIcon.Visible)
