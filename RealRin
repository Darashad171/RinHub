local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local TS = game:GetService("TweenService")

-- Asset ID para kay Rin (palitan ng sariling image ID)
local RIN_IMAGE = "rbxassetid://1234567890" -- Palitan ng tunay na ID

local gui = Instance.new("ScreenGui")
gui.ResetOnSpawn = false
gui.Name = "RinHubUI"
gui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")

-- Main Container
local main = Instance.new("Frame")
main.Size = UDim2.new(0, 220, 0, 250)
main.Position = UDim2.new(0.5, -110, 0.5, -125)
main.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
main.BackgroundTransparency = 0.3
main.BorderSizePixel = 0
main.ClipsDescendants = true
main.Parent = gui

-- Exit Confirmation Dialog
local confirmFrame = Instance.new("Frame")
confirmFrame.Size = UDim2.new(1, 0, 1, 0)
confirmFrame.BackgroundTransparency = 1
confirmFrame.Visible = false
confirmFrame.Parent = gui

local overlay = Instance.new("Frame")
overlay.Size = UDim2.new(1, 0, 1, 0)
overlay.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
overlay.BackgroundTransparency = 0.5
overlay.Parent = confirmFrame

local dialog = Instance.new("Frame")
dialog.Size = UDim2.new(0, 200, 0, 230)
dialog.Position = UDim2.new(0.5, -100, 0.5, -115)
dialog.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
dialog.Parent = confirmFrame
Instance.new("UICorner", dialog)

local rinImage = Instance.new("ImageLabel")
rinImage.Size = UDim2.new(0, 150, 0, 150)
rinImage.Position = UDim2.new(0.5, -75, 0, 10)
rinImage.Image = RIN_IMAGE
rinImage.Parent = dialog

local confirmText = Instance.new("TextLabel")
confirmText.Size = UDim2.new(1, -20, 0, 40)
confirmText.Position = UDim2.new(0, 10, 0, 170)
confirmText.Text = "Sure ka ba na gusto mong umexit?"
confirmText.Font = Enum.Font.GothamBold
confirmText.TextColor3 = Color3.fromRGB(255, 255, 255)
confirmText.TextSize = 14
confirmText.BackgroundTransparency = 1
confirmText.Parent = dialog

local buttonFrame = Instance.new("Frame")
buttonFrame.Size = UDim2.new(1, 0, 0, 30)
buttonFrame.Position = UDim2.new(0, 0, 1, -40)
buttonFrame.BackgroundTransparency = 1
buttonFrame.Parent = dialog

local yesBtn = Instance.new("TextButton")
yesBtn.Size = UDim2.new(0.4, 0, 1, 0)
yesBtn.Text = "Oo"
yesBtn.Font = Enum.Font.GothamBold
yesBtn.TextColor3 = Color3.fromRGB(255, 50, 50)
yesBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
yesBtn.Parent = buttonFrame
Instance.new("UICorner", yesBtn)

local noBtn = Instance.new("TextButton")
noBtn.Size = UDim2.new(0.4, 0, 1, 0)
noBtn.Position = UDim2.new(1, -80, 0, 0)
noBtn.Text = "Hindi"
noBtn.Font = Enum.Font.GothamBold
noBtn.TextColor3 = Color3.fromRGB(0, 255, 154)
noBtn.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
noBtn.Parent = buttonFrame
Instance.new("UICorner", noBtn)

-- Close Button Functionality
local function showExitConfirm()
    confirmFrame.Visible = true
    TS:Create(confirmFrame, TweenInfo.new(0.3), {BackgroundTransparency = 0.5}):Play()
    TS:Create(dialog, TweenInfo.new(0.3), {Position = UDim2.new(0.5, -100, 0.5, -115)}):Play()
end

local function hideExitConfirm()
    TS:Create(confirmFrame, TweenInfo.new(0.3), {BackgroundTransparency = 1}):Play()
    TS:Create(dialog, TweenInfo.new(0.3), {Position = UDim2.new(0.5, -100, 0.4, -115)}):Play()
    wait(0.3)
    confirmFrame.Visible = false
end

yesBtn.MouseButton1Click:Connect(function()
    hideExitConfirm()
    TS:Create(main, TweenInfo.new(0.3), {Size = UDim2.new(0, 0, 0, 0)}):Play()
    wait(0.3)
    gui:Destroy()
end)

noBtn.MouseButton1Click:Connect(hideExitConfirm)

-- Original Close Button (I-update ang existing code)
closeBtn.MouseButton1Click:Connect(showExitConfirm)
